<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your PG:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hero_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/default_hero_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hero_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Brancaleone"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hero_class_race"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cavaliere Umano 20" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="@color/colorAccent" />

    <fragment
        android:id="@+id/frag_player"
        class="com.example.ruoliamoci.FragmentPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>